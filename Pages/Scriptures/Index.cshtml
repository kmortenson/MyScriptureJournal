@page "{searchString?}"
@model MyScriptureJournal.IndexModel

@{
    ViewData["Title"] = "My Scriptures";
}

<h1>My Scriptures</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
    <p>
        Scripture: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
        Note: <input type="text" asp-for="SearchString2" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Scripture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].DateEntered)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scripture[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Scripture)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Scripture)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateEntered)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
